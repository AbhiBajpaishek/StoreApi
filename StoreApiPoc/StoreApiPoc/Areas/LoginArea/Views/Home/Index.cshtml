@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/CSS/LoginHomeCSS.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <main>
        @if (ViewBag.Signup == true)
        {
            @Html.Label("", "Registration Successful, Please login to continue....", new { @class = "alert alert-success signed-up" });
        }
        @if (ViewBag.CustomerCredentials==false)
        {
            @Html.Label("email", "Wrong Credentials!!!", new { @class = "alert alert-danger signed-up" });
        }

        <div class="main-content">
            <form class="login-form" method="post">
                <div class="form-group">

                    <label for="email">Email address:</label>
                    <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                    <label for="pwd">Password:</label>
                    <input type="password" class="form-control" id="pwd" name="password">
                </div>
                <div class="checkbox">
                    <label><input type="checkbox"> Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>

                <a href="@Url.Action("Registration")" class="btn btn-danger signup">New User? Sign up</a>
            </form>
        </div>
    </main>
</body>
</html>
